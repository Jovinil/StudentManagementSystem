<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StudentManagementSystem.Views.SignUpPageView">

            <!-- Sign Up Form Section -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="Get Started Now" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
      
                <TextBox Text="name" Margin="0,0,0,10" />
                <TextBox Text="Username" Margin="0,0,0,10" />
                <TextBox Text="Password" PasswordChar="*" Margin="0,0,0,10" />

                <Button Content="Sign Up" HorizontalAlignment="Right" Background="Green" Foreground="White" Margin="0,20,0,10" />
            </StackPanel>

</UserControl>
